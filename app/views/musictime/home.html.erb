<div class="outermap container-fluid" >

  <div class="row">
  <div class="mapaffix col-md-7 col-md-offset-3"  >
    <div class="map-container">
      <div id="map" style='width: 100%; height: 350px;'></div> <br>
      <div class="input-group">
          <input type="text" class="form-control" id="address-box" placeholder="Enter your address...">
          <span class="input-group-btn">
            <button class="btn btn-default" id="update-button" type="button">Go!</button>
          </span>
        </div><!-- /input-group -->
    </div>
  </div>
</div>



<div class="main-container">
    <div class="row">
        <div class="col-md-3" >
          <div class="widget-container panel panel-default" id="youtube-widget" data-spy="affix" data-offset-top="530" >
            <p> click on the <i class="fa fa-spotify fa-2x"></i> to load a spotify playlist with the top 3 songs of each band</p>
            <p> click the <i class="fa fa-youtube fa-2x"></i> to load in youtube videos for that band </p>
          </div>
        </div>
        <div class="col-md-7 results-container">
            <%= render partial: 'results', locals: {results: @display_results} %>
        </div>

        <div class="col-md-1" id="spotify-widget">
        </div>
    </div>
</div>